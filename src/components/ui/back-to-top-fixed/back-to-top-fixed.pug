mixin BackToTopFixed()
    <svg style='border: 0 !important; clip: rect(0 0 0 0) !important; height: 1px !important; margin: -1px !important; overflow: hidden !important; padding: 0 !important; position: absolute !important; width: 1px !important;' xmlns="https://www.w3.org/2000/svg"'>
        <linearGradient id="circleGrad">
            <stop offset="0%" stop-color="#fbc2eb"></stop>
            <stop offset="100%" stop-color="#a6c1ee"></stop>
        </linearGradient>
    </svg>

    a.back-to-top-fixed(href="#")
        <svg class="back-to-top-fixed__progress" viewport="0 0 100 100">
        <circle cx="30" cy="30" r="27"></circle>
        <circle class="back-to-top-fixed__bar" transform="rotate(270 30 30)" cx="30" cy="30" r="27"></circle>
        </svg>
        +icon('back-to')
